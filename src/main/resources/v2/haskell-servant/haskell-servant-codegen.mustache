                     , aeson
                     , text
                     , containers
                     , network-uri
                     , servant
                     , http-api-data
                     , servant-client
                     , servant-server
                     , servant-checked-exceptions
                     , servant
                     , warp
                     , transformers
                     , mtl
                     , http-client
                     , http-types
  default-language:    Haskell2010
